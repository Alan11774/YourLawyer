<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayoutHeader"
        android:orientation="horizontal">

    <!-- User Profile Image -->
    <ImageButton
        android:id="@+id/userProfileImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:backgroundTint="@color/white"
        android:src="@drawable/person_resource" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

        <!-- Logout Button -->
        <ImageButton
            android:id="@+id/addCaseButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add_resource"
            android:background="@null" />
    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logout_resource"
        android:background="@null" />
            </LinearLayout>
    </LinearLayout>

    <!-- Search Field -->
    <EditText
        android:id="@+id/searchTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutHeader"
        android:layout_margin="16dp"
        android:hint="Ingresa un texto para buscar"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

    <!-- Search Button -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchTextField"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/blue"
        android:text="Buscar"
        android:textColor="@android:color/white" />

    <!-- Results Label -->
    <TextView
        android:id="@+id/resultsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Resultados encontrados"
        android:textStyle="bold" />

    <!-- Filter Button -->
    <Button
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/resultsLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:text="Price low to high"
        android:textColor="@color/blue" />

    <!-- Table (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tableView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/resultsLabel"
        android:layout_marginTop="16dp" />

    <!-- Progress Indicator -->
    <ProgressBar
        android:id="@+id/activityIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>