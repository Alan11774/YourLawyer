<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.PostCaseFragment">



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen de perfil -->
            <ImageView
                android:id="@+id/caseImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/empty_image_resource"
                android:layout_marginBottom="16dp" />
            <Button
                android:id="@+id/uploadImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cargar_imagen"
                android:backgroundTint="@color/blue"
                android:textColor="@android:color/white" />
            <!-- Botón de contacto -->


            <!-- Nombre -->
            <EditText
                android:id="@+id/titleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/titulo_del_caso"
                android:textColorHint="@color/gray"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"
                android:padding="12dp" />

            <Spinner
                android:id="@+id/mySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@drawable/spinner_background" />

            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/describe_tu_caso"
                android:textColorHint="@color/gray"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"
                android:padding="12dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linerLayoutDescription"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/location_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:id="@+id/caseLocationLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="@string/añade_tu_ubicacion"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/money_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:id="@+id/budgetLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="@string/ingresa_tu_presupuesto"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/person_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/postedByLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/posteado_por_juan_mecanico_el_dia_19_02_2024"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/fire_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:id="@+id/urgency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="@string/urgencia_alta_media_o_baja"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>

                <!-- Habilidades -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ingresa_los_entregables_necesarios"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/folder_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <Spinner
                        android:id="@+id/spinnerRequirements1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/folder_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <Spinner
                        android:id="@+id/spinnerRequirements2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ingresa_las_palabras_clave_que_describen_tu_caso"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/baseline_radio_button_checked_24"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <Spinner
                        android:id="@+id/spinnerTag1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/baseline_radio_button_checked_24"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <Spinner
                        android:id="@+id/spinnerTag2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/baseline_radio_button_checked_24"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <Spinner
                        android:id="@+id/spinnerTag3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>

                <Button
                    android:id="@+id/publishButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/publicar"
                    android:backgroundTint="@color/blue"
                    android:textColor="@android:color/white" />
                <!-- Botón de contacto -->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>